
@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="form-group">
        <input type="button" id="btnBuscar" class="btn btn-primary" value="Buscar" />
        <input type="button" id="btnNuevo" class="btn btn-success" value="Nuevo" />
    </div>
</div>

 

<table id="tblMedicamentos">
    <tr>
        <td></td>
        <td>Nombre Medicamento</td>
        <td>Fecha Fab.</td>
        <td>Fecha Ven.</td>
        <td>Cantidad</td>
        <td>Tipo Emp.</td>
        <td>Editar</td>
        <td>Eliminar</td>
    </tr>



</table>

<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Nombre del Medicamento</label>
                            <input type="text" id="txtNombreMedicamento" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Fecha de Fabricacion</label>
                            <input type="date" id="txtFechaFab" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Fecha Vencimiento</label>
                            <input type="date" id="txtFechaVence" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Cantidad</label>
                            <input type="number" id="txtCantidad" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Empaque</label>
                            <select id="ddlTipoEmpaque" class="form-control">
                                
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        @*<div class="form-group">
                                <label>Estado de Registro</label>
                                <input type="text" id="txtEstadoRegistro" class="form-control" />
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Negocio/Medicamentos.js"></script>

